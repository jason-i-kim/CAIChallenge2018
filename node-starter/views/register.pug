extends layout

block content
  .main.container

  body
    form(action='POST', style='border:1px solid #ccc')
      .container
        h1 Register
        p Please fill in this form to register your drone.
        hr
        label(for='firstName')
          b First Name: 
        input(type='text', placeholder='First Name', name='firstName')
        hr
        label(for='lastName')
          b Last Name: 
        input(type='text', placeholder='Last Name', name='lastName')
        hr
        label(for='streetAddress')
          b Street Address: 
        input(type='text', placeholder='Street Address', name='streetAddress')
        hr
        label(for='city')
          b City: 
        input(type='text', placeholder='City', name='city')
        hr
        label(for='state')
          b State: 
        input(type='text', placeholder='State', name='state')
        hr
        label(for='zipCode')
          b Zip Code: 
        input(type='text', placeholder='Zip Code', name='zipCode')
        hr
        .clearfix
          button.cancelbtn(type='button') Cancel
          button.signupbtn(type='submit') Sign Up